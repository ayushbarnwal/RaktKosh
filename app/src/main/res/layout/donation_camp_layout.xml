<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/lightest_grey">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="3dp"
        android:elevation="2dp"
        android:padding="8dp"
        app:cardCornerRadius="12dp"
        app:cardMaxElevation="4dp"
        app:strokeColor="@color/white"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/camp_hospital_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AIIMS Delhi"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/camp_date"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="27"
                    android:layout_marginLeft="20dp"
                    android:textSize="70dp"
                    android:layout_marginRight="3dp"
                    android:textColor="@color/black"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/camp_month"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="Dec"
                        android:textSize="23dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:gravity="bottom"/>

                    <TextView
                        android:id="@+id/camp_year"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="2022"
                        android:textSize="15dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:gravity="top"/>


                </LinearLayout>

                <TextView
                    android:id="@+id/camp_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="09:00 - 06:00"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="20dp"/>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/camp_layout_first_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Remind Me"
                    android:gravity="center"
                    android:textColor="@color/dark_red"
                    android:background="@color/yellow"
                    android:padding="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="20dp"/>

                <TextView
                    android:id="@+id/camp_layout_second_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Locate"
                    android:textColor="@color/dark_red"
                    android:gravity="center"
                    android:padding="10dp"
                    android:background="@color/yellow"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"/>



            </LinearLayout>


        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>-->

</LinearLayout>